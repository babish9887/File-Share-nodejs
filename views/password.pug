doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Get Shared File
  body(style="background: #39aea9")
    form(method="post", style="display: grid; gap: .5rem; grid-template-columns: auto 1fr; max-width: 300px; margin: 0 auto;")
      label(for="password") Password:
      input(type="password", id="password", name="password", required style="width: 200px; background: #eee; border: none")
      button(style=" background-color: #2b7a78; color: #fff; border: none; cursor: pointer; width: 100%; padding: 5px; padding: 10px;margin-bottom:10px;border-radius: 4px;", type="submit") Download
    if error
      div(style="color: #dd0000; margin-bottom: 1rem; text-align: center") Incorrect Password
